variant mydebug
    :
    :
      <optimization>off
      <debug-symbols>on
      <inlining>off
      <runtime-debugging>on
      <define>_GLIBCXX_DEBUG
      <toolset>gcc
    ;


variant myrelease
    :
    :
      <optimization>speed
      <debug-symbols>off
      <runtime-debugging>off
      <inlining>full
      <define>NDEBUG
      <threading>multi
      <link>static
      <runtime-link>static
      <toolset>gcc
    ;

variant speedrelease
    : myrelease
    :
      <define>CACHE_NODE_F_VALUE
      <define>CACHE_TILES_HASH_VALUE
      <define>CACHE_TILES_BLANK_INDEX
    ;

variant spacerelease
    : myrelease
    :
    ;


project switchback
    : requirements
        <include>boost_1_41_0
        <include>src
    : source-location src
    : build-dir build
    : default-build
        <variant>mydebug
#        <variant>speedrelease
#        <variant>spacerelease
        <warnings>on
    ;


exe tiles-search
    :
      tiles/ManhattanDistance.cpp
      tiles/Tiles.cpp
      tiles/TilesState.cpp
      TilesSearch.cpp
    ;

exe tiles-test
    :
      tiles/ManhattanDistance.cpp
      tiles/Tiles.cpp
      tiles/TilesState.cpp
      tiles/TilesTest.cpp
    ;
