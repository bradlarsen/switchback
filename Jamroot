variant mydebug
    :
      <optimization>off
      <debug-symbols>on
      <inlining>off
      <runtime-debugging>on
      <define>_GLIBCXX_DEBUG
      <toolset>gcc
    ;

variant myrelease
    :
      <optimization>speed
      <debug-symbols>off
      <runtime-debugging>off
      <inlining>full
      <define>NDEBUG
      <threading>multi
      <link>static
      <runtime-link>static
      <toolset>gcc
      <address-model>64
    ;


project switchback
    : requirements
        <include>boost_1_41_0
        <include>src
    : source-location src
    : build-dir build
    : default-build
        <variant>mydebug
#        <variant>myrelease
        <warnings>on
    ;


exe tiles-search
    :
      tiles/ManhattanDistance.cpp
      tiles/Tiles.cpp
      tiles/TilesState.cpp
      TilesSearch.cpp
    ;

exe tiles-test
    :
      tiles/ManhattanDistance.cpp
      tiles/Tiles.cpp
      tiles/TilesState.cpp
      tiles/TilesTest.cpp
    ;
